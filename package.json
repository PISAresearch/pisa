{
  "name": "pisa",
  "version": "1.0.0",
  "description": "Arbitration Outsourcing for State Channels",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./build && npx tsc && cp -r ./raiden_demo build/raiden_demo",
    "build-raiden-pisa-daemon": "cd build/raiden_demo/raiden-pisa-daemon && npm install && npm run build",
    "build-autominer": "cd build/raiden_demo/autominer && npm install && npm run build",
    "start": "node ./build/src/startUp.js",
    "start-dev": "ts-node src/startUp.ts",
    "start-evm": "ganache-cli -d -l 15000000 --allowUnlimitedContractSize --defaultBalanceEther 1000000 --mnemonic 'myth like bonus scare over problem client lizard pioneer submit female collect'",
    "submodule": "git submodule init && git submodule update",
    "test": "NODE_ENV=test && npm run build && mocha build/test/src --exit --recursive && npm run test-mocked",
    "test-load": "node build/test/load/loadTest.js 10 20000",
    "test-coverage": "npm run build && nyc mocha --recursive build/test/src --exit",
    "test-smoke": "node build/test/smoke/smokeTests.js",
    "test-integration": "npm run build && npm run build-raiden-pisa-daemon && npm run build-autominer && mocha build/test/integration --exit",
    "test-mocked": "NODE_ENV=test mocha build/test/mocked --exit",
    "test-raiden": "NODE_ENV=test mocha -r ts-node/register test/mocked/raidenInspector.test.ts",
    "test-ts": "NODE_ENV=test mocha -r ts-node/register test/src && npm run test-raiden"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PISAresearch/pisa.git"
  },
  "author": "PISA Research",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PISAresearch/pisa/issues"
  },
  "homepage": "https://github.com/PISAresearch/pisa#readme",
  "dependencies": {
    "@types/sinon": "^7.0.11",
    "ethers": "^4.0.7",
    "express": "^4.16.4",
    "express-http-context": "^1.2.0",
    "express-rate-limit": "^3.5.0",
    "ganache-core": "^2.5.5",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "rwlock": "^5.0.0",
    "source-map-support": "^0.5.9",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cls-hooked": "^4.3.0",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^3.3.0",
    "@types/fs-extra": "^5.0.5",
    "@types/ganache-core": "^2.1.1",
    "@types/lolex": "^3.1.1",
    "@types/mocha": "^5.2.5",
    "@types/request-promise": "^4.1.42",
    "@types/rwlock": "^5.0.2",
    "@types/uuid": "^3.4.4",
    "@types/yargs": "^12.0.10",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "fs-extra": "^7.0.1",
    "lolex": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "tree-kill": "^1.2.1",
    "ts-mockito": "^2.3.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3",
    "wait-port": "^0.2.2"
  }
}
