{
  "name": "pisa",
  "version": "1.0.0",
  "description": "Arbitration Outsourcing for State Channels",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./build && npx tsc && cp -r ./raiden_demo build/raiden_demo",
    "build-raiden-pisa-daemon": "cd build/raiden_demo/raiden-pisa-daemon && npm install && npm run build",
    "build-autominer": "cd build/raiden_demo/autominer && npm install && npm run build",
    "start": "node ./build/src/startUp.js",
    "start-dev": "ts-node src/startUp.ts",
    "start-evm": "ganache-cli -d -l 15000000 --allowUnlimitedContractSize --defaultBalanceEther 1000000 --mnemonic 'myth like bonus scare over problem client lizard pioneer submit female collect'",
    "submodule": "git submodule init && git submodule update",
    "lint": "eslint --ext ts .",
    "test": "NODE_ENV=test && mocha -r ts-node/register 'test/src/**/*.test.ts' --exit && npm run test-mocked",
    "test-load": "ts-node test/load/loadTest.ts 10 20000",
    "test-coverage": "NODE_ENV=test && nyc mocha -r ts-node/register --reporter mocha-junit-reporter --reporter-options mochaFile=coverage/mocha/test-results.xml 'test/src/**/*.test.ts' --exit && npm run test-mocked",
    "test-smoke": "ts-node test/smoke/smokeTests.ts",
    "test-integration": "mocha -r ts-node/register 'test/integration/**/*.test.ts' --exit",
    "test-mocked": "NODE_ENV=test mocha -r ts-node/register 'test/mocked/**/*.test.ts' --exit",
    "testy": "NODE_ENV=test mocha -r ts-node/register 'test/integration/endToEnd.test.ts' --exit"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json-summary",
      "lcovonly"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PISAresearch/pisa.git"
  },
  "author": "PISA Research",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PISAresearch/pisa/issues"
  },
  "homepage": "https://github.com/PISAresearch/pisa#readme",
  "dependencies": {
    "encoding-down": "^6.0.2",
    "ethers": "^4.0.7",
    "express": "^4.16.4",
    "express-http-context": "^1.2.0",
    "express-rate-limit": "^3.5.0",
    "ganache-core": "^2.5.5",
    "leveldown": "^5.0.3",
    "levelup": "^4.0.1",
    "memdown": "^4.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "rwlock": "^5.0.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cls-hooked": "^4.3.0",
    "@types/dockerode": "^2.5.16",
    "@types/encoding-down": "^5.0.0",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^3.3.0",
    "@types/fs-extra": "^5.0.5",
    "@types/ganache-core": "^2.1.1",
    "@types/leveldown": "^4.0.0",
    "@types/levelup": "^3.1.0",
    "@types/lolex": "^3.1.1",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^12.0.0",
    "@types/request-promise": "^4.1.42",
    "@types/rwlock": "^5.0.2",
    "@types/sinon": "^7.0.11",
    "@types/uuid": "^3.4.4",
    "@types/yargs": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dockerode": "^2.5.8",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "fs-extra": "^7.0.1",
    "lolex": "^4.0.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.22.0",
    "nyc": "^13.3.0",
    "prettier": "^1.17.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "tree-kill": "^1.2.1",
    "ts-mockito": "^2.3.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3",
    "wait-port": "^0.2.2"
  }
}
